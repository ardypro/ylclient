#ifndef YLCLIENT_H_
#define YLCLIENT_H_

namespace yeelink {

class ylclient {
private:
	char* apikey;

public:
	ylclient();
	virtual ~ylclient();

	bool connect();					//连接到服务器，需要实现给APIKEY赋值
	bool connect(char* APIkey);	//连接到服务器
	void disconnect();				//断开与服务器的连接
	bool connected;					//连接状态

	void setAPIKey(char* APIKey);	//设置APIKEY

	//发布数据方法
	bool publish(int value);
	bool publish(float value);
	bool publish(bool value);
	bool publish(char* value);

};

} /* namespace yeelink */
#endif /* YLCLIENT_H_ */
