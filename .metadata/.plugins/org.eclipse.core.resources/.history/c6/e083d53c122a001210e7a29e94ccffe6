#ifndef YLCLIENT_H_
#define YLCLIENT_H_

#include "WString.h"
#include "ylconst.h"
namespace yeelink {

class ylclient {
private:
	char* apikey;
	NETWORKCARD cardtype;
	bool _connected;
	char* apiver;
public:
	ylclient();
	virtual ~ylclient();

	bool connect();					//连接到服务器，需要实现给APIKEY赋值
	bool connect(char* APIkey);	//连接到服务器
	void disconnect();				//断开与服务器的连接
	bool connected();				//连接状态

	void setAPIKey(char* APIKey);	//设置APIKEY
	void setAPIKey(String APIKey);
	void setAPIVersion(char* APIVer);
	void setAPIVersion(String APIVer);

	//设置网卡参数
	void setNETCardParam(char* mac, char* ip);
	void setNETCardParam(String mac, String ip);
	void setNETCardType(NETWORKCARD cardType);

	//设置设备与传感器
	bool setActiveDevice(int deviceid);
	bool setActiveSensor(int sensorid);

	//发布数据方法
	bool push(int value);
	bool push(float value);
	bool push(bool value);
	bool push(char* value);

};

} /* namespace yeelink */
#endif /* YLCLIENT_H_ */
