#ifndef SERIALHTTP_H_
#define SERIALHTTP_H_

#include "GenericEthernet.h"

namespace yeelink {

class SerialHTTP: public yeelink::GenericEthernet {
public:
	SerialHTTP();
	virtual ~SerialHTTP();

	void setPort(int index);
	bool connect();
	bool Post(int value);
	bool Post(float value);
	//bool Post(char* value);

	virtual bool postKeyValue(char* key, char* value);

};

} /* namespace yeelink */
#endif /* SERIALHTTP_H_ */
